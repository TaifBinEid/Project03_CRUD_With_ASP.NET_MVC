@model BookModel

<center>
    <form asp-action="create" method="post" class="form-horizontal">
        <div class="form-group">
            <label asp-for="BookID">ID</label>
            <input asp-for="BookID" disabled />
        </div>
        <div class="form-group">
            <label asp-for="Title">Title</label>
            <input asp-for="Title" />
            <span asp-validation-for="Title"></span>
        </div>
        <div class="form-group">
            <label asp-for="Notes">Notes</label>
            <input asp-for="Notes" />
            <span asp-validation-for="Notes"></span>
        </div>
        <div class="form-group">
            <label asp-for="NoPage">No.of page</label>
            <input asp-for="NoPage" />
        </div>
        <div class="form-group">
            <label asp-for="Price">Price</label>
            <input asp-for="Price"  placeholder="SAR"/>
        </div>

        <div class="form-group">
            <input type="submit" class="btn btn-info" value="submit" />
        </div>
    </form>
</center>